{
  "version": 2,
  "builds": [
    {
      "src": "server.js",
      "use": "@vercel/node",
      "config": {
        "maxDuration": 30
      }
    },
    {
      "src": "public/**/*",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/submit-response",
      "dest": "/server.js",
      "methods": ["POST"]
    },
    {
      "src": "/health",
      "dest": "/server.js",
      "methods": ["GET"]  
    },
    {
      "src": "/debug/sheets",
      "dest": "/server.js",
      "methods": ["GET"]
    },
    {
      "src": "/api/status",
      "dest": "/server.js",
      "methods": ["GET"]
    },
    {
      "src": "/public/(.*)",
      "dest": "/public/$1"
    },
    {
      "src": "/(.*\\.(css|js|png|jpg|jpeg|gif|svg|ico|html))",
      "dest": "/public/$1"
    },
    {
      "src": "/",
      "dest": "/public/index.html"
    },
    {
      "src": "/(.*)",
      "dest": "/public/index.html"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}